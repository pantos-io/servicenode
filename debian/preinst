#!/bin/sh
# preinst script
#
# see: dh_installdeb(1)

set -e
venv_dir='/opt/pantos/pantos-service-node'

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
    install)
    ;;

    upgrade)
        echo "${DPKG_MAINTSCRIPT_PACKAGE}: Purging symlinks before upgrading from $2" >&2
        /usr/bin/find "$venv_dir" -type l -execdir /bin/rm -v '{}' +
    ;;

    abort-upgrade)
    ;;

    *)
        echo "${DPKG_MAINTSCRIPT_PACKAGE}: preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
